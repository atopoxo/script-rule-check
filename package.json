{
  "name": "script-rule-check",
  "publisher": "shaoyi",
  "displayName": "script-rule-check",
  "description": "scripts check by rules",
  "version": "0.0.4",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/atopoxo/script-rule-check.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "assets/icons/logo.png",
  "contributes": {
    "configuration": {
      "title": "脚本规则检查",
      "properties": {
        "script-rule-check.productDir": {
          "type": "string",
          "default": "z:/trunk",
          "description": "指定产品根目录路径(需绝对路径)"
        },
        "script-rule-check.customCheckRules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "自定义配置表检查规则"
        },
        "script-rule-check.displayMode": {
          "type": "string",
          "enum": ["tree", "flat", "rule"],
          "enumDescriptions": [
            "按目录树结构显示",
            "按文件列表显示",
            "按规则显示"
          ],
          "default": "tree",
          "description": "结果展示模式：树形结构(tree)或平铺列表(flat)"
        }
      }
    },
    "commands": [
      {
        "command": "extension.checkAllRules",
        "title": "▶ 检查所有用例规则"
      },
      {
        "command": "extension.checkCustomRules",
        "title": "▶ 检查自定义用例规则"
      },
      {
        "command": "extension.setProductDir",
        "title": "Set Product Directory"
      },
      {
        "command": "extension.setDisplayTreeMode",
        "title": "按目录树结构显示",
        "icon": {
          "light": "assets/icons/light/tree.svg",
          "dark": "assets/icons/dark/tree.svg"
        }
      },
      {
        "command": "extension.setDisplayFlatMode",
        "title": "按文件列表显示",
        "icon": {
          "light": "assets/icons/light/flat.svg",
          "dark": "assets/icons/dark/flat.svg"
        }
      },
      {
        "command": "extension.setDisplayRuleMode",
        "title": "按规则显示",
        "icon": {
          "light": "assets/icons/light/rule.svg",
          "dark": "assets/icons/dark/rule.svg"
        }
      },
      {"command": "extension.checkSpecificRule.rule1", "title": "▶ Trap脚本检查"},
      {"command": "extension.checkSpecificRule.rule2", "title": "▶ scene模块检查"},
      {"command": "extension.checkSpecificRule.rule3", "title": "▶ player模块检查"},
      {"command": "extension.checkSpecificRule.rule4", "title": "▶ Lua脚本闭包数据修改检查"},
      {"command": "extension.checkSpecificRule.rule5", "title": "▶ Doodad脚本检查"},
      {"command": "extension.checkSpecificRule.rule6", "title": "▶ 任务脚本检查"},
      {"command": "extension.checkSpecificRule.rule7", "title": "▶ 全局检查"},
      {"command": "extension.checkSpecificRule.rule8", "title": "▶ 技能脚本检查"},
      {"command": "extension.checkSpecificRule.rule9", "title": "▶ 计时器脚本检查"},
      {"command": "extension.checkSpecificRule.rule10", "title": "▶ 道具脚本检查"},
      {"command": "extension.checkSpecificRule.rule11", "title": "▶ 场景对应脚本检查"}
    ],
    "submenus": [
      {
        "id": "functions.submenu",
        "label": "Script Rule Check"
      },
      {
        "id": "checkSpecificRules.submenu",
        "label": "检查指定用例规则"
      }
    ],
    "menus": {
      "view/title": [
         {
          "command": "extension.setDisplayTreeMode",
          "when": "view == ruleCheckResults",
          "group": "navigation"
        },
        {
          "command": "extension.setDisplayFlatMode",
          "when": "view == ruleCheckResults",
          "group": "navigation"
        },
        {
          "command": "extension.setDisplayRuleMode",
          "when": "view == ruleCheckResults",
          "group": "navigation"
        }
      ],
      "view/item/context": [
      ],
      "explorer/context": [
        {
          "submenu": "functions.submenu",
          "group": "navigation"
        }
      ],
      "functions.submenu": [
        {
          "command": "extension.checkAllRules",
          "group": "navigation@1"
        },
        {
          "submenu": "checkSpecificRules.submenu",
          "group": "navigation@2"
        },
        {
          "command": "extension.checkCustomRules",
          "group": "navigation@3"
        }
      ],
      "checkSpecificRules.submenu": [
        {"command": "extension.checkSpecificRule.rule1"},
        {"command": "extension.checkSpecificRule.rule2"},
        {"command": "extension.checkSpecificRule.rule3"},
        {"command": "extension.checkSpecificRule.rule4"},
        {"command": "extension.checkSpecificRule.rule5"},
        {"command": "extension.checkSpecificRule.rule6"},
        {"command": "extension.checkSpecificRule.rule7"},
        {"command": "extension.checkSpecificRule.rule8"},
        {"command": "extension.checkSpecificRule.rule9"},
        {"command": "extension.checkSpecificRule.rule10"},
        {"command": "extension.checkSpecificRule.rule11"}
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "script-rule-check",
          "title": "脚本规则检查",
          "icon": "assets/icons/logo.svg"
        }
      ]
    },
    "views": {
      "script-rule-check": [
        {
          "id": "scriptRuleConfig",
          "name": "Configuration"
        },
        {
          "id": "ruleCheckResults",
          "name": "Script Check Results"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.50",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chardet": "^2.1.0",
    "iconv-lite": "^0.6.3"
  }
}

{
  "name": "script-rule-check",
  "publisher": "shaoyi",
  "displayName": "script-rule-check",
  "description": "scripts check by rules",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/atopoxo/script-rule-check.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:ruleCheckResults",
    "onCommand:extension.checkLuaRules"
  ],
  "contributes": {
    "configuration": {
      "title": "Script Rule Check",
      "properties": {
        "script-rule-check.productDir": {
          "type": "string",
          "default": "z:/trunk",
          "description": "指定产品根目录路径(需绝对路径)"
        },
        "script-rule-check.displayMode": {
          "type": "string",
          "enum": ["tree", "flat"],
          "enumDescriptions": [
            "树状层级结构显示结果",
            "扁平化列表显示结果"
          ],
          "default": "tree",
          "description": "结果展示模式：树形结构(tree)或平铺列表(flat)"
        }
      }
    },
    "commands": [
      {
        "command": "extension.checkLuaRules",
        "title": "Check Script Rules"
      },
      {
        "command": "extension.chooseDisplayMode",
        "title": "Choose Display Mode"
      },
      {
        "command": "extension.setProductDir",
        "title": "Set Product Directory"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.chooseDisplayMode",
          "when": "view == ruleCheckResults",
          "group": "navigation",
          "icon": "$(list-selection)"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.setProductDir",
          "when": "view == scriptRuleConfig",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.checkLuaRules",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.checkLuaRules",
          "when": "always" 
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "script-rule-check",
          "title": "Script Rule Check",
          "icon": "assets/logo/logo.svg"
        }
      ]
    },
    "views": {
      "script-rule-check": [
        {
          "id": "scriptRuleConfig",
          "name": "Configuration"
        },
        {
          "id": "ruleCheckResults",
          "name": "Script Check Results"
        }
      ],
      "explorer": [
        
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.50",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chardet": "^2.1.0",
    "iconv-lite": "^0.6.3"
  }
}
